<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_pokemon_kanban" model="ir.ui.view">
        <field name="name">view_res_pokemon_kanban</field>
        <field name="model">res.pokemon</field>
        <field name="arch" type="xml">
            <kanban default_group_by="type">
                <field name="image" widget="image" width="200" height="200"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_image">
                                    <t t-if="record.image.raw_value">
                                        <img t-att-src="kanban_image('res.pokemon', 'image', record.id.raw_value)" class="oe_kanban_image"/>
                                    </t>
                                    <t t-else="">
                                        <div class="oe_kanban_no_image">No image</div>
                                    </t>
                                </div>
                                <div class="o_kanban_details">
                                    <strong>
                                        <field name="name" />
                                    </strong>
                                    <div>
                                        <field name="type" />
                                        <t t-if="record.subtype.raw_value">/<field name="subtype" /></t>
                                    </div>
                                    <div>Exp: <field name="base_experience" /></div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_views_res_pokemon" model="ir.actions.act_window">
        <field name="name">Pokemon</field>
        <field name="res_model">res.pokemon</field>
        <field name="view_mode">kanban</field>
    </record>

    <menuitem id="menu_res_pokemon" name="Pokemon" action="action_views_res_pokemon" />
</odoo>