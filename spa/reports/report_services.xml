<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="report_services_document">
		<t t-call="web.external_layout">
			<div class="page">
				<h2>Servicios - Informe</h2>
				<t t-foreach="docs" t-as="doc">
					<h3><t t-esc="doc.name"/></h3>
					<p><t t-esc="doc.description or ''"/></p>
				</t>
			</div>
		</t>
	</template>

	<report id="action_report_services" model="hr.services.report" string="Servicios" report_type="qweb-pdf" name="proyecto_practica_1_tmp.report_services_document" file="proyecto_practica_1_tmp.report_services_document"/>

</odoo>
